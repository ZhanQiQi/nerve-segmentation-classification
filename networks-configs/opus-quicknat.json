{
    "name": "QuickNat",
    "n_gpu": 1,
    "seed": "None",
    "arch": {
        "type": "QuickNat",
        "args": {
            "params":
                {
                "num_channels":1,
                "num_filters":64,
                "kernel_h":5,
                "kernel_w":5,
                "stride_conv":1,
                "pool":2,
                "stride_pool":2,
                "num_class":2,
                "se_block": "CSSE",
                "drop_out": 0.2,
                "kernel_c": 1
                }
        }
    },
    "data_loader": {
        "type": "OPUSDataLoader",
        "args":{
            "data_dir": "/home/maml/datasets/OPUS_data_3",
            "batch_size": 5,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "input_size": 400,
            "augmentation_probability": 0.5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "dice",
    "metrics": [
        "dice_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
