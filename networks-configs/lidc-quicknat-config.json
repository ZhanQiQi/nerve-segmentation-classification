{
    "name": "QuickNat",
    "n_gpu": 1,
    "seed": "None",
    "arch": {
        "type": "QuickNat",
        "args": {
            "params":
                {
                "num_channels":1,
                "num_filters":64,
                "kernel_h":5,
                "kernel_w":5,
                "stride_conv":1,
                "pool":2,
                "stride_pool":2,
                "num_class":2,
                "se_block": "CSSE",
                "drop_out": 0.2,
                "kernel_c": 1
                }
        }
    },
    "data_loader": {
        "type": "LidcDataLoader",
        "args":{
            "data_dir": "/home/farid/Probabilistic-Unet/data/",
            "batch_size": 10,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "test_config": {
                "test_split": 0.05,
                "batch_size": 1
            },
            "use_percentage": 0.01
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "dice",
    "metrics": [
        "ged", "dice_agreement_in_samples", "iou_samples_per_label", "variance_ncc_samples"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "QuicknatTrainer",
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,

        "metrics_sample_count": 5
    }
}
