{
    "name": "SoftQuickFCN",
    "n_gpu": 1,
    "seed": "None",
    "arch": {
        "type": "SoftQuickFCN",
        "args": {
            "params": {
                "num_channels": 7,
                "num_filters": 32,
                "kernel_h": 5,
                "kernel_w": 5,
                "stride_conv": 1,
                "pool": 2,
                "stride_pool": 2,
                "num_class": 2,
                "se_block": "false",
                "drop_out": 0.05,
                "kernel_c": 1
            }
        }
    },
    "data_loader": {
        "type": "OPUSDataLoader",
        "args": {
            "data_dir": "data/OPUS_nerve_segmentation/OPUS_data_3",
            "batch_size": 4,
            "shuffle": true,
            "validation_split": 0,
            "num_workers": 2,
            "input_size": 400,
            "augmentation_probability": 0.5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.00004,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "combined_loss",
    "metrics": [
        "dice_score",
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 350,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "OPUSMultitaskTrainer",
        "epochs": 500,
        "save_dir": "saved/",
        "save_period": 50,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 350,
        "tensorboard": true
    }
}