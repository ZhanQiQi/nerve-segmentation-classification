{
    "name": "ResUltNet",
    "n_gpu": 1,
    "seed": "None",
    "arch": {
        "type": "ResUltNet",
        "args": {
            "params": {
            }
        }
    },
    "data_loader": {
        "type": "OPUSDataLoader",
        "args": {
            "data_dir": "data/OPUS_nerve_segmentation/OPUS_data_3",
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "input_size": 400,
            "augmentation_probability": 0.5
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "crossentropy_plu_loss",
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "type": "ResNetTrainer",
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 50,
        "tensorboard": true
    }
}